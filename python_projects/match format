def main():
    
    print("number of Teams")
n = int(input ())
while (n % 2)>0:
      print("please select even number" )
      n = int(input ())
      continue 
if n < 6:
    print("number of matches")
    print((n/2)+1)
    
else:
    print("format number 1 is roundrobin and format number 2 is group based")
    print("number of matches in format1")
    print(n*(n-1)+4)
    print("numebr of matches in format 2")
    print(((n/2)*(n/2-1))+((n/2)*(n/2-1))+3)
main()